{{!this file is the default appearance of the page without requiring backend auth}}

<main class="container mt-5">
  {{#each posts as |post|}}
    <div class="row align-items-center mb-5 border p-3 rounded">
      <div class="col-md-8">
        <h2 class="h4">{{post.title}}</h2>
        <p>{{post.content}}</p>
      </div>
    </div>
  {{/each}}
</main>

{{#if logged_in}}
  <script src="/js/logout.js"></script>
{{/if}}

