{{!--this file is the default appearance of the page without requiring backend auth--}}

<main class="container container-fluid mt-5">
    {{#each posts as |post|}}
    <div class="row align-center mb-5">
        <div class="col-md-6">
            <h2>{{post.title}}</h2>
            {{!-- <p>{{post.createdAt}}</p> --}}
        </div>
        <div class="col-md-6">
            <p>{{post.content}}</p>
        </div>
    </div>
    {{/each}}
</main>

{{#if logged_in}}
<script src="../public/js/logout.js"></script>
{{/if}}

